<script>
    document.getElementById('charityForm').addEventListener('submit', function(event) {
        let valid = true;

        function showError(id, condition) {
            const errorElement = document.getElementById(id);
            if (condition) {
                errorElement.style.display = 'block';
                valid = false;
            } else {
                errorElement.style.display = 'none';
            }
        }

        showError("firstNameError", !document.getElementById('firstName').value.trim());
        showError("lastNameError", !document.getElementById('lastName').value.trim());
        showError("emailError", !document.getElementById('email').value.trim());
        
        const sexChecked = document.querySelector('input[name="sex"]:checked');
        showError("sexError", !sexChecked);

        if (!valid) {
            event.preventDefault();
        }
    });
</script>

